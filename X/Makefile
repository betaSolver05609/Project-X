# Compiler
CXX = g++
CXXFLAGS = -std=c++17 -Wall -I. -MMD -MP
LDFLAGS = -ljsoncpp

# Find all .cpp files recursively
SRC = $(shell find . -name "*.cpp")
OBJ = $(SRC:.cpp=.o)
DEP = $(OBJ:.o=.d)

OUT = db_start

# Default target
all: $(OUT)

$(OUT): $(OBJ)
	$(CXX) $(CXXFLAGS) $(OBJ) -o $@ $(LDFLAGS)

# Include dependency files generated by -MMD
-include $(DEP)

# Run the program
run: $(OUT)
	./$(OUT)

# Clean compiled files
clean:
	find . -name "*.o" -o -name "*.d" -delete
	rm -f $(OUT)

